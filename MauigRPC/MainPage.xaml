<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauigRPC.ViewModels"
             x:Class="MauigRPC.MainPage"
             x:DataType="viewmodels:MainViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="gRPC Demo"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Test gRPC communication with the server"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Entry
                x:Name="NameEntry"
                Placeholder="Enter your name"
                Text="{Binding Name}"
                HorizontalOptions="Fill" />

            <Button
                x:Name="CallGrpcBtn"
                Text="Call gRPC Service" 
                SemanticProperties.Hint="Calls the gRPC server"
                Command="{Binding CallGrpcCommand}"
                IsEnabled="{Binding IsButtonEnabled}"
                HorizontalOptions="Fill" />

            <Label
                x:Name="ResponseLabel"
                Text="{Binding ResponseMessage}"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="{StaticResource Primary}" />

            <ActivityIndicator
                x:Name="LoadingIndicator"
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                Color="{StaticResource Primary}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
