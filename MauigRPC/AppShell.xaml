<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauigRPC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauigRPC"
    Title="MauigRPC">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Contacts"
            Icon="people"
            ContentTemplate="{DataTemplate local:ContactsPage}"
            Route="ContactsPage" />
    </TabBar>

</Shell>
